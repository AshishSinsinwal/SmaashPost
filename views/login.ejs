<% layout("/layouts/boilerplate.ejs") -%>
    <div class="form-container">
        <div class="form-header">
            <h1>Login</h1>
            <p>Share your thoughts with the community</p>
        </div>
        
        <form action="/login" method="post">
            <div class="form-group">
                <label for="user">Username</label>
                <input type="text" name="username" id="user" placeholder="Enter Your Username" required minlength="3" maxlength="15">
            </div>
     
             <div class="form-group">
                <label for="password">Passwrord</label>
                <input type="password" name="password" id="password" placeholder="Enter Your password" minlength="4" maxlength="15" required>
            </div>
            
           
            
            <button type="submit" class="submit-btn">Login</button>
        </form>
    </div>

   